# E-Commerce Order Processing System - Environment Configuration (Perl)
# Copy this file to .env and update with your actual values
# DO NOT commit the .env file to version control!

# Mojolicious Settings
# Generate a secure secret key: perl -e 'use Mojo::Util qw(secure_random); print secure_random(32)'
MOJOLICIOUS_SECRET_KEY=your-super-secret-mojolicious-key-here-change-in-production

# Database Configuration (optional - defaults to data/ecommerce.db)
# DATABASE_PATH=/path/to/ecommerce.db

# Admin User Credentials (optional - for sample data setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@ecommerce.com

# Staff User Credentials (optional - for sample data setup)
STAFF_USERNAME=staff
STAFF_PASSWORD=staff123
STAFF_EMAIL=staff@ecommerce.com

# Customer User Credentials (optional - for sample data setup)
CUSTOMER_USERNAME=customer
CUSTOMER_PASSWORD=customer123
CUSTOMER_EMAIL=customer@ecommerce.com

# Email Configuration (optional - for notifications)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@example.com
# EMAIL_PASSWORD=your-email-password
# EMAIL_FROM=noreply@ecommerce.com

# Payment Gateway (optional - for integrations)
# STRIPE_SECRET_KEY=sk_test_your_stripe_key
# STRIPE_PUBLIC_KEY=pk_test_your_stripe_key
# PAYPAL_CLIENT_ID=your_paypal_client_id
# PAYPAL_CLIENT_SECRET=your_paypal_secret

# API Keys (optional - for third-party services)
# API_KEY_SHIPPING=your_shipping_api_key
# API_KEY_ANALYTICS=your_analytics_api_key

# Debug Mode (set to 0 in production)
DEBUG=1
