# ShopPy E-Commerce System - Environment Configuration
# Copy this file to .env and update with your actual values
# DO NOT commit the .env file to version control!

# Django Settings
# Generate a secure SECRET_KEY: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=your-super-secret-django-key-here-change-in-production

# Debug mode (set to False in production)
DEBUG=True

# Allowed hosts (comma-separated for production)
ALLOWED_HOSTS=localhost,127.0.0.1

# Admin User Credentials (used when creating admin user via create_admin.py)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@shoppy.com
ADMIN_PASSWORD=your-secure-admin-password-here

# Database (optional - defaults to SQLite in data/ecommerce.db)
# DATABASE_URL=postgresql://user:password@localhost/ecommerce_db

# Email Configuration (optional - for notifications)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password

# Payment Gateway (optional - for integrations)
# STRIPE_SECRET_KEY=sk_test_your_stripe_key
# STRIPE_PUBLIC_KEY=pk_test_your_stripe_key
# PAYPAL_CLIENT_ID=your_paypal_client_id
# PAYPAL_CLIENT_SECRET=your_paypal_secret

# AWS S3 (optional - for file uploads)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
